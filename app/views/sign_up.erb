<div class="container">
  <h1>Sign Up</h1>
    <form id="sign-up" method="post" action="/users">
    
    <label class="label" for="name">Name</label>
    <input type="text" name="user[name]" placeholder="e.g., joe" value="<%= @user.name %>">
    <span id="name-errors" class="errors"></span>

    <label class="label" for="email">Email</label>
    <input type="email" name="user[email]" placeholder="e.g., me@example.com" value="<%= @user.email %>">
    <span id="email-errors" class="errors"></span>
    
    <label class="label" for="password">Password</label>
    <input type="password" name="user[entered_password]" placeholder="6 or more characters">
    <span id="entered_password-errors" class="errors"></span>    
    
    <label class="label" for="password">Password Confirmation</label>
    <input type="password" name="user[entered_password_confirmation]" placeholder="Must Match Password">
    <span id="entered_password_confirmation-errors" class="errors"></span>    
    
    <div class="submit"><button type="submit">Sign Up</button></div>
    <ul id="errors"></ul>
    </form>
</div>
