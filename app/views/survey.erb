<div class="container">
  <h1><%= @survey.title %></h1>
  <div class="questions">
    <ol>
      <% @survey.questions.each do |question|%>
      <li><%= question.content %></li>
      <ul><% question.choices.each do |choice|  %>
        <li><%= choice.content %> <%= choice.answers.count %></li>
        <% end %>
      </ul>
      <% end %>
    </ol>
  </div>
</div>
