<div class="container">
  <form action="/survey/<%= @survey.id %>/add_questions" method="post">
    <h1><%= @survey.title %></h1>
  <ul>
      <% @survey.questions.each do |question|%>
      <li><%= question.content %></li>
      <ul><% question.choices.each do |choice|  %>
        <li><%= choice.content %></li>
        <% end %>
      </ul>
      <% end %>
      
  <%= erb :add_question %>

    <input type="submit" value="Add Question"><br>
  </form>
  <a href="/">I'm Done.</a>
</div>
